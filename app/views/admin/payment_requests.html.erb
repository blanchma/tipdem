<table class="admin_table_1" border="0" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <%= content_tag :th, "Usuario" %>
      <%= content_tag :th, "Email" %>
      <%= content_tag :th, "Dinero Solicitado" %>
