<% content_for :head do %>
  <%= stylesheet_link_tag 'login'  %>
<% end %>

<div id="content">
  <div id="detail">
    <div id="desc">

         <%= render :partial => "shared/show_user_errors" %>

      <div id="login" style="height: 225px">
        <div id="logo">
          <% link_to "/" do %>
            <%= image_tag 'logo_lc.png', :alt => "Tipdem", :width => "220", :height => "50", :vspace => "20", :border => "0" %>
          <% end %></div>

        <h2>Reenviar instrucciones de confirmación</h2>
        <% form_for resource_name, resource, :url => confirmation_path(resource_name) do |f| %>
          <p class="p1"><%= f.label :email %></p>
          <p class="p2"><%= f.text_field :email %></p>

          <p><%= f.submit "Reenviar instrucciones de confirmación", :class => "btn" %></p>
          <br/><br/><br/><br/>
          <div style="display: block; margin-top:10px;">
            <%= render :partial => "shared/devise_links" %>
          </div>

        </div>
       
      </div>
    </div>

  </div>

<% end %>